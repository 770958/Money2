<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- 厂商下拉框 -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="厂商名称"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        <Spinner
                android:id="@+id/spinnerUpdateVendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="产品名称"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

        <!-- 产品名称 -->
        <EditText
                android:id="@+id/etUpdateProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="产品名称"
                android:inputType="text" />


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单位"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        <!-- 单位 -->
        <EditText
                android:id="@+id/etUpdateUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="单位"
                android:inputType="text" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        <!-- 数量 -->
        <EditText
                android:id="@+id/etUpdateQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:inputType="numberDecimal" />

        <!-- 单价 -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单价"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

        <EditText
                android:id="@+id/etUpdateUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="单价"
                android:inputType="numberDecimal" />

        <!-- 其他费用 -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他费用"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

        <EditText
                android:id="@+id/etUpdateOtherFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="其他费用"
                android:inputType="numberDecimal" />



        <!-- 库管签字人下拉框 -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="库管签字人"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        <Spinner
                android:id="@+id/spinnerUpdateManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

        <!-- 总金额 (只读) -->
        <TextView
                android:id="@+id/tvUpdateTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总金额：0.0"
                android:textSize="16sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

        <!-- 备注 -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

        <EditText
                android:id="@+id/etUpdateRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="备注"
                android:inputType="textMultiLine" />

        <!-- 按钮 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

            <Button
                    android:id="@+id/btnUpdateConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定" />

            <Button
                    android:id="@+id/btnUpdateCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色 -->
    <solid android:color="#DCDCDC"/>  <!-- 可以根据需求修改背景颜色 -->

    <!-- 设置圆角效果 -->
    <corners android:radius="8dp"/> <!-- 圆角半径，可根据需求调整 -->

    <!-- 设置内边距 -->
    <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp"/> <!-- 内边距，增加内容与边界的间隔 -->
</shape>
